#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


# запускаем все остальные deb-helper'ы "по умолчанию"
# (про которые мы как раз ничего не знаем):
%:
	dh $@ 

pkg_name = openscad-2014.03
pkg_arch = x86-32
pkg_ext = tar.gz

deb_ = debian
pkg_root = $(deb_)/openscad
src_root = $(deb_)/source
f_log = $(deb_)/files.log


override_dh_auto_install:

	@echo 'Expand package...'
	mkdir $(deb_)/tmp
	tar xzvf ../$(pkg_name).$(pkg_arch).$(pkg_ext) -C $(deb_)/tmp

# отказываемся от использования dh_install, который в данном примере больше будет мешать, чем помогать принцип сборки пакетов: 
override_dh_install:
# копируем наши файлики:
	@echo "Copying application wrappers into /usr/bin..."
	echo 'cp -rv $(src_root)/bin/. $(pkg_root)/usr/bin/ > $(f_log)'
	@echo "Copying application into /usr/bin..."
	echo 'cp -rv $(src_root)/lib/. $(pkg_root)/usr/lib/ >> $(f_log)'
	@echo "Copying examples into /usr/bin..."
	echo 'cp -rv $(src_root)/examples/. \
                $(pkg_root)/usr/share/openscad/examples/ >> $(f_log)'
	@echo "Copying support files into /usr/bin..."
	@cp -rv $(src_root)/share/. $(pkg_root)/usr/share/ >> $(f_log)
#	cp -rv $(src_root)/share/appdata/openscad. $(pkg_root)/usr/share/ >> $(f_log)
#	cp -rv $(src_root)/share/. $(pkg_root)/usr/share/ >> $(f_log)
#	cp -rv $(src_root)/share/. $(pkg_root)/usr/share/ >> $(f_log)
#	cp -rv $(src_root)/share/. $(pkg_root)/usr/share/ >> $(f_log)
    # .appdata.xml - to /usr/share/appdata
    # .desktop     - to /usr/share/application
    # .xml         - to /usr/share/mime/packages
    # .png         - to /usr/share/pixmaks


	@echo "Copying libraries..."
	@cp -rv $(src_root)/libraries/. \
                $(pkg_root)-mcad/usr/share/openscad/libraries/ >> $(f_log)

#override_dh_prep:
#
#	echo "It\'s prepare!!!"
#	echo '== Current DIR =='
#	ls
#	echo '== $(deb_) DIR =='
#	ls $(deb_)

override_dh_makeshlibs:
# skipped

override_dh_shlibdeps:
# skipped

